#import <UIKit/UIKit.h>

/**
 *  @brief 背景类型
 */
typedef enum
{
	IMBgViewType_Round = 0,
    IMBgViewType_RoundTop,
    IMBgViewType_RoundMiddle,
    IMBgViewType_RoundBottom
} IMBgViewType;

@interface IMBgView : UIView

@property (nonatomic, assign) IMBgViewType borderType;
@property (nonatomic, assign) CGFloat cornerRadius;

@property (nonatomic, strong) UIColor *borderColor;
@property (nonatomic, strong) UIColor *fillColor;

@end
